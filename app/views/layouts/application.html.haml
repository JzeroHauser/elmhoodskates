!!! 5
%html
  %head
    %title Elmhoodskates
    = stylesheet_link_tag    "application", :media => "all" 
    = javascript_include_tag "application"
    = csrf_meta_tags 
    = favicon_link_tag 'skull.gif' 
  %body
    %div{:id => "wrapper"}
      %header
        %h1 Elmhood Skates
        %br
        %br
        %br
        %div{:id => "banner"} 
          = image_tag "twitter.gif" 
          = image_tag "facebook.gif"  
          = image_tag "youtube.gif" 
      %section
        = render 'form'
        = link_to "Show all products", :root
        = form_tag finder_path, :method => :get do
          = text_field_tag :product, "", {placeholder: "Search"}
          = submit_tag("search")
      %section
        = yield 
      %aside
        = link_to 'Active Admin', "/admin" 
        = render 'cart'	
      %footer
        %p Placeholder footer.
