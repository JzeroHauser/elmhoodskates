%h2 Thank you for your purchase
%ul
  - @goods.each do |good|
    %li
      - item = Product.find good[0]
      = item.name
      = good[1]
      X
      = item.price
      /:
      = good[0] * item.price
      - @run += good[1] * item.price
  %li
    - gst = 0.07
    - pst = 0.05
    - sub_total = @run.round(2)
    - gst_amount = (sub_total * gst).round(2)
    - pst_amount = (sub_total * pst).round(2)
    - final_total = sub_total + pst_amount + gst_amount
  %h1= "Sub Total: #{sub_total}"
  %br
  %h1= "PST #{pst * 100}%: $#{pst_amount} " 
  %br
  %h1= "PST #{gst * 100}%: $#{gst_amount} "
  %br
  %h1= "Grand Total: $#{final_total}"
- session.delete(:shopping_cart)